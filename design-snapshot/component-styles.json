{
  "button-primary": {
    "padding": "0.5rem 1rem",
    "borderRadius": "0.375rem",
    "fontSize": "0.875rem",
    "fontWeight": "500",
    "backgroundColor": "#3b82f6",
    "color": "#ffffff",
    "border": "none",
    "cursor": "pointer",
    "transition": "all 0.2s",
    "display": "inline-flex",
    "alignItems": "center",
    "justifyContent": "center",
    "gap": "0.5rem"
  },
  "button-secondary": {
    "padding": "0.5rem 1rem",
    "borderRadius": "0.375rem",
    "fontSize": "0.875rem",
    "fontWeight": "500",
    "backgroundColor": "#6b7280",
    "color": "#ffffff",
    "border": "none",
    "cursor": "pointer",
    "transition": "all 0.2s",
    "display": "inline-flex",
    "alignItems": "center",
    "justifyContent": "center",
    "gap": "0.5rem"
  },
  "button-danger": {
    "padding": "0.5rem 1rem",
    "borderRadius": "0.375rem",
    "fontSize": "0.875rem",
    "fontWeight": "500",
    "backgroundColor": "#ef4444",
    "color": "#ffffff",
    "border": "none",
    "cursor": "pointer",
    "transition": "all 0.2s",
    "display": "inline-flex",
    "alignItems": "center",
    "justifyContent": "center",
    "gap": "0.5rem"
  },
  "input-field": {
    "padding": "0.5rem 0.75rem",
    "borderRadius": "0.375rem",
    "border": "1px solid #d1d5db",
    "fontSize": "0.875rem",
    "backgroundColor": "#ffffff",
    "width": "100%",
    "transition": "border-color 0.2s"
  },
  "input-field:focus": {
    "outline": "none",
    "borderColor": "#3b82f6",
    "boxShadow": "0 0 0 3px rgba(59, 130, 246, 0.1)"
  },
  "table-header": {
    "padding": "0.75rem",
    "fontWeight": "600",
    "borderBottom": "2px solid #e5e7eb",
    "textAlign": "left",
    "backgroundColor": "#f9fafb"
  },
  "table-cell": {
    "padding": "0.75rem",
    "borderBottom": "1px solid #e5e7eb",
    "verticalAlign": "top"
  },
  "table-row:hover": {
    "backgroundColor": "rgba(0, 0, 0, 0.05)"
  },
  "card": {
    "backgroundColor": "#ffffff",
    "border": "1px solid #e5e7eb",
    "borderRadius": "12px",
    "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.1)",
    "padding": "1.5rem"
  },
  "sidebar-button": {
    "textAlign": "left",
    "padding": "0.75rem 1rem",
    "borderRadius": "0.375rem",
    "transition": "background-color 0.2s",
    "width": "100%",
    "border": "none",
    "backgroundColor": "transparent",
    "cursor": "pointer"
  },
  "sidebar-button:hover": {
    "backgroundColor": "rgba(0, 0, 0, 0.05)"
  },
  "modal-backdrop": {
    "position": "fixed",
    "top": "0",
    "left": "0",
    "width": "100%",
    "height": "100%",
    "backgroundColor": "rgba(0, 0, 0, 0.5)",
    "zIndex": "1040"
  },
  "modal-content": {
    "position": "relative",
    "maxWidth": "800px",
    "margin": "1.75rem auto",
    "backgroundColor": "#ffffff",
    "borderRadius": "12px",
    "boxShadow": "0 10px 40px rgba(0, 0, 0, 0.2)",
    "padding": "2rem"
  },
  "stat-card": {
    "backgroundColor": "#ffffff",
    "border": "1px solid #e5e7eb",
    "borderRadius": "12px",
    "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.1)",
    "padding": "1.5rem",
    "textAlign": "center"
  },
  "stat-card-icon": {
    "fontSize": "2rem",
    "marginBottom": "0.5rem"
  },
  "stat-card-number": {
    "fontSize": "2rem",
    "fontWeight": "bold",
    "marginBottom": "0.25rem"
  },
  "stat-card-label": {
    "fontSize": "0.875rem",
    "color": "#6b7280"
  }
}
