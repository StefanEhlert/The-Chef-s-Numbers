# ========================================
# DOCKER CONTAINER KONFIGURATION
# ========================================

# DATENBANK-AUSWAHL
# Setzen Sie DB_TYPE auf "postgres" oder "mariadb"
DB_TYPE=postgres

# ========================================
# POSTGRESQL KONFIGURATION
# ========================================
# Nur aktiv wenn DB_TYPE=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chef_numbers
POSTGRES_USER=chef
POSTGRES_PASSWORD=password

# ========================================
# MARIADB KONFIGURATION
# ========================================
# Nur aktiv wenn DB_TYPE=mariadb
MYSQL_HOST=mariadb
MYSQL_PORT=3306
MYSQL_DATABASE=chef_numbers
MYSQL_USER=chef
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=rootpassword

# ========================================
# MINIO KONFIGURATION
# ========================================
MINIO_ROOT_USER=chef_access_key
MINIO_ROOT_PASSWORD=chef_secret_key
MINIO_SERVER_URL=http://localhost:9000
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=chef_access_key
MINIO_SECRET_KEY=chef_secret_key
MINIO_BUCKET=chef-images
MINIO_USE_SSL=false

# ========================================
# BACKEND KONFIGURATION
# ========================================
NODE_ENV=production
BACKEND_PORT=3000

# ========================================
# DOCKER COMPOSE PROFILE AKTIVIERUNG
# ========================================
# Führen Sie folgende Befehle aus, um die gewünschten Services zu starten:
#
# Für PostgreSQL + MinIO + Backend:
# docker-compose --profile postgres --profile minio up -d
#
# Für MariaDB + MinIO + Backend:
# docker-compose --profile mariadb --profile minio up -d
#
# Für alle Services (nicht empfohlen):
# docker-compose --profile postgres --profile mariadb --profile minio up -d
